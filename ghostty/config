theme = light:meridian-neutral,dark:zenith-neutral

macos-titlebar-proxy-icon = hidden
window-padding-x = 8
window-padding-y = 4
window-padding-balance = true
window-padding-color = extend
resize-overlay = never
unfocused-split-opacity = 1
mouse-hide-while-typing = true

font-size = 13
font-thicken = true
font-thicken-strength = 0

cursor-style = bar
cursor-style-blink = true
adjust-cursor-thickness = 1

macos-option-as-alt = true
keybind = option+shift+backspace=text:\x15
keybind = command+t=new_split:right
keybind = shift+command+t=new_split:down
keybind = command+up=jump_to_prompt:-1
keybind = command+down=jump_to_prompt:1
keybind = command+p=resize_split:up,8
keybind = command+semicolon=resize_split:down,8
keybind = command+l=resize_split:left,8
keybind = command+apostrophe=resize_split:right,8
keybind = command+equal=equalize_splits
keybind = command+minus=ignore
keybind = option+minus=decrease_font_size:1
keybind = option+equal=increase_font_size:1
keybind = option+zero=reset_font_size
